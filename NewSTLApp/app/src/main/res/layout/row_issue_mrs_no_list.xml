<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        card_view:contentPadding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <RelativeLayout
                android:id="@+id/rl_item_detail_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cb_scan"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_desp_no_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="@string/desp_no"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_desp_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_desp_no_label"
                    android:paddingTop="3dp"
                    android:text=""
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_route_no_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_desp_no_label"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="@string/route_no"/>

                <TextView
                    android:id="@+id/tv_route_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_desp_no_label"
                    android:layout_toRightOf="@+id/tv_route_no_label"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text=""/>

            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>