<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        card_view:contentPadding="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <RelativeLayout
                android:id="@+id/rl_item_detail_cont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/cb_scan"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_item_code_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="@string/item_code_lable"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_item_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_item_code_label"
                    android:paddingTop="3dp"
                    android:text="dfr434"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_item_detail_cont"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_location_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@string/location_name"/>

                    <TextView
                        android:id="@+id/tv_location_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_location_id_label"
                        android:layout_toRightOf="@+id/tv_location_name_label"
                        android:paddingBottom="3dp"
                        android:text="L1"/>

                    <TextView
                        android:id="@+id/tv_location_id_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_location_id"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/location_id"/>

                    <TextView
                        android:id="@+id/tv_location_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="34"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_mrir_no_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@string/mrir_no"/>

                    <TextView
                        android:id="@+id/tv_mrir_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_mrir_date_label"
                        android:layout_toRightOf="@+id/tv_mrir_no_label"
                        android:paddingBottom="3dp"
                        android:text="123"/>

                    <TextView
                        android:id="@+id/tv_mrir_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_mrir_date"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/mrir_date"/>

                    <TextView
                        android:id="@+id/tv_mrir_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="34 kg"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_route_no_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@string/route_no"/>

                    <TextView
                        android:id="@+id/tv_route_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_route_date_label"
                        android:layout_toRightOf="@+id/tv_route_no_label"
                        android:paddingBottom="3dp"
                        android:text="123"/>

                    <TextView
                        android:id="@+id/tv_route_date_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_route_date"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/route_date"/>

                    <TextView
                        android:id="@+id/tv_route_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="34 kg"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_machine_name_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@string/machine_name"/>

                    <TextView
                        android:id="@+id/tv_machine_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_machine_id_label"
                        android:layout_toRightOf="@+id/tv_machine_name_label"
                        android:paddingBottom="3dp"
                        android:text="M1"/>

                    <TextView
                        android:id="@+id/tv_machine_id_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_machine_id"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/machine_no"/>

                    <TextView
                        android:id="@+id/tv_machine_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="M34"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_coil_no_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@string/coil_no"/>

                    <TextView
                        android:id="@+id/tv_coil_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_coil_weight_label"
                        android:layout_toRightOf="@+id/tv_coil_no_label"
                        android:paddingBottom="3dp"
                        android:text="M1"/>

                    <TextView
                        android:id="@+id/tv_coil_weight_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_coil_weight"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/coil_weight"/>

                    <TextView
                        android:id="@+id/tv_coil_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="34KG"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_heat_no_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@string/heat_no"/>

                    <TextView
                        android:id="@+id/tv_heat_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_grade_label"
                        android:layout_toRightOf="@+id/tv_heat_no_label"
                        android:paddingBottom="3dp"
                        android:text="H1"/>

                    <TextView
                        android:id="@+id/tv_grade_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_grade"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/grade"/>

                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="10B"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tv_wire_dia_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="3dp"
                        android:text="@string/wire_dia"/>

                    <TextView
                        android:id="@+id/tv_wire_dia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_div_label"
                        android:layout_toRightOf="@+id/tv_wire_dia_label"
                        android:paddingBottom="3dp"
                        android:text="WD12"/>

                    <TextView
                        android:id="@+id/tv_div_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/tv_div"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="@string/division"/>

                    <TextView
                        android:id="@+id/tv_div"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingBottom="3dp"
                        android:paddingRight="3dp"
                        android:text="Div1"/>
                </RelativeLayout>

            </LinearLayout>

            <CheckBox
                android:id="@+id/cb_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:checked="false"
                android:clickable="false"
                android:paddingRight="3dp"
                android:text="Issue"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>