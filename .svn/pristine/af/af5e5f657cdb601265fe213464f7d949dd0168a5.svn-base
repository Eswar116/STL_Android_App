<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:paddingLeft="5dp">

    <RelativeLayout
        android:id="@+id/rl_customer_name_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/invoice_customer_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:text="CUSTOMER NAME"
            android:textColor="@color/colorAccent"
            android:textSize="12dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageViewArrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:paddingTop="5dp"
            android:src="@drawable/ic_down_arrow"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/invoice_customer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/invoice_customer_name_label"
            android:maxLines="1"
            android:text="Customer Name"
            android:textColor="@color/colorAccent"
            android:textSize="14dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invoice_no_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INVOICE NO."
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/invoice_invoiceNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invoice_no_label"
                android:text="678"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/invoiceDate_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INVOICE DATE"
                android:textColor="@color/colorAccent"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/invoice_invoiceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invoiceDate_label"
                android:text="30-12-2016"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>